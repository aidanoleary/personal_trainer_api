<p id="notice"><%= notice %></p>

<h1>Listing User Stats</h1>

<table>
  <thead>
    <tr>
      <th>Points</th>
      <th>Total reps</th>
      <th>Total weight</th>
      <th>Total cardio</th>
      <th>Total distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_stats.each do |user_stat| %>
      <tr>
        <td><%= user_stat.points %></td>
        <td><%= user_stat.total_reps %></td>
        <td><%= user_stat.total_weight %></td>
        <td><%= user_stat.total_cardio %></td>
        <td><%= user_stat.total_distance %></td>
        <td><%= link_to 'Show', user_stat %></td>
        <td><%= link_to 'Edit', edit_user_stat_path(user_stat) %></td>
        <td><%= link_to 'Destroy', user_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

