<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Level</th>
      <th>Main muscle</th>
      <th>Other muscles</th>
      <th>Equipment</th>
      <th>E type</th>
      <th>Mechanics</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.level %></td>
        <td><%= exercise.main_muscle %></td>
        <td><%= exercise.other_muscles %></td>
        <td><%= exercise.equipment %></td>
        <td><%= exercise.e_type %></td>
        <td><%= exercise.mechanics %></td>
        <td><%= exercise.image_url %></td>
        <td><%= link_to 'Show', exercise %></td>
        <!-- <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td> -->
        <!-- <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

